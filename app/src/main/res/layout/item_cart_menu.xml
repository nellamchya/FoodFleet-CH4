<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_menu_image"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,1:1.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_sate_ayam"
        android:contentDescription="@string/text_menu_image" />

    <ImageView
        android:id="@+id/iv_remove_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/text_remove_cart" />

    <TextView
        android:id="@+id/tv_menu_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/ll_counter_menu"
        app:layout_constraintStart_toEndOf="@id/iv_menu_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Banana auoh idfuwh naiofnaqwufnaowfhn oinfoaifnoi" />

    <TextView
        android:id="@+id/tv_menu_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_notes_item"
        app:layout_constraintEnd_toStartOf="@+id/ll_counter_menu"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_menu_image"
        app:layout_constraintTop_toBottomOf="@id/tv_menu_name"
        app:layout_constraintVertical_bias="0.051"
        tools:text="IDR. 20.000" />

    <LinearLayout
        android:id="@+id/ll_counter_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_button_rounded_border_transparent"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_remove_cart">

        <ImageView
            android:id="@+id/iv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_decrement"
            android:contentDescription="@string/text_minus_cart" />

        <TextView
            android:id="@+id/tv_menu_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="8dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="23" />

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="240dp"
            android:src="@drawable/ic_increment"
            android:contentDescription="@string/text_add_to_cart" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_notes_item"
        style="@style/ThemeOverlay.Material3.TextInputEditText.FilledBox"
        android:layout_width="278dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_button_rounded_border_transparent"
        android:hint="@string/text_hint_notes"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_menu_image"
        app:layout_constraintTop_toBottomOf="@id/iv_menu_image"
        tools:ignore="TextSizeCheck"
        tools:text="aikowfbawoifhaowifb awbn ouiqawhofin awf oiawf awoif" />
</androidx.constraintlayout.widget.ConstraintLayout>