<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_logo_3d"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_3d"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodFleet"
        tools:targetApi="31">
        <activity
            android:name=".presentation.feature.main.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".presentation.feature.register.RegisterActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".presentation.feature.splashscreen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.feature.login.LoginActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".presentation.feature.checkout.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.feature.detailmenu.DetailMenuActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.feature.profile.editprofile.EditProfileActivity"
            android:exported="false" />
    </application>

</manifest>